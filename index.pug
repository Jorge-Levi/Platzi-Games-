-var titulo = "Titulos Principal2"
-var titulos = ["TITULO PRINCIPAL","SUBTITULO 1", "SUBTITULO 2", "SUBTITULO 3"]
-var usuario = "Levi"
mixin caja(imagen,titulo,parrafo)
    .caja
        .caja__imagen: img(src="images/" + imagen, alt="imagen de ejemplo")
        .caja__contenido 
            h3 #{titulo}
            p #{parrafo}

doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/ejercicio-pug.css")
        title Platzi Games
    body
    header
        h1 PLATZIGAMES
        if usuario
            a Hola #{usuario}
        else
            a.boton REGISTRAR
